# top-most EditorConfig file?
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{Makefile, *.tsv}]
indent_style = tab

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{html,js,less}]
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
